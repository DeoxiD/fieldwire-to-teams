# Fieldwire API Configuration
FIELDWIRE_API_TOKEN=your_api_token_here
FIELDWIRE_REGION=us  # us or eu
FIELDWIRE_PROJECT_IDS=ALL  # ALL or comma-separated IDs: proj1,proj2,proj3

# Microsoft Teams Configuration
TEAMS_WEBHOOK_URL=https://outlook.webhook.office.com/webhookb2/your-webhook-url-here

# Polling Configuration
POLL_MINUTES=5  # Check for new tasks every 5 minutes
MAX_TASKS=10  # Maximum number of tasks to process per poll

# Application Configuration
DRY_RUN=false  # Set to true to test without sending to Teams
DEBUG=false  # Set to true for verbose logging
